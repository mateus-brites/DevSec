        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333/",
            "description": "API de test"
        }
    ],
    "paths": {
        "/user/create": {
            "post": {
                "tags": ["User"],
                "summary": "Create a user",
                "description": "Create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "username": "Mateus Brites",
                                    "email": "mateusmmo15@gmail.com",
                                    "password": "StrongPassword"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Email is in use"
                    }
                }
            }
        },
        "/user/find/email": {
            "post": {
                "tags": ["User"],
                "security": [{ "bearerAuth": [] }],
                "summary": "Find a user",
                "description": "find a user by email",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "email": "mateusmmo15@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Founded"
                    },
                    "400": {
                        "description": "Email not found"
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "tags": ["User"],
                "summary": "Login",
                "description": "Login with your account",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "email": "mateusmmo15@gmail.com",
                                    "password": "StrongPassword"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login"
                    },
                    "400": {
                        "description": "Email or password incorrect"
                    }
                }
            }
        },
        "/user/follow/{id}": {
            "post": {
                "tags": ["User"],
                "security": [{ "bearerAuth": [] }],
                "summary": "Find user by email",
                "description": "Find user by email",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "user id",
                        "required": true,
                        "schemas":{
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Sucess"
                    },
                    "400": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/user/avatar": {
            "patch": {
                "tags": ["User"],
                "security": [{ "bearerAuth": [] }],
                "summary": "Add avatar",
                "description": "Add avatar image",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "avatar": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/post": {
            "post": {
                "tags": ["Post"],
                "summary": "Create a post",
                "description": "Create a new post",
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "description": "O que achou da aplicação ?"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "user not found"
                    }
                }
            }
        },
        "/post/film": {
            "patch": {
                "tags": ["Post"],
                "security": [{ "bearerAuth": [] }],
                "summary": "upload a video",
                "description": "add post video",
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "video": {
                                        "type": "string",
                                        "format": "binary"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/post/update/{postId}": {
            "put": {
                "tags": ["Post"],
                "summary": "Create a post",
                "description": "Create a new post",
                "security": [{ "bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "postId",
                        "in": "path",
                        "description": "post id",
                        "required": true,
                        "schemas":{
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "description": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "description": "Contactme on mateusmmo15@gmail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Change"
                    },
                    "404": {
                        "description": "post not found"
                    },
                    "403": {
                        "description": "Acess denied"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Company": {
                "type": "object",
                "properties": {
                    "company": {
                        "type": "string"
                    },
                    "exchange_valuew": {
                        "type": "number"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}